
.SUFFIXES: .o.cpp

CPP = g++
AR = ar r
RM = rm -f

SWE_LIB = ../swe/libswe.a
BASE_LIB = ../base/libmaitreya_base.a
JYOTISH_LIB = libjyotish.a
JYOTISH_PROG = textclient.exe

OBS = ArabicParts.o Ashtakavarga.o AshtottariDasa.o Aspect.o astrobase.o \
	Dasa.o Eclipse.o Ephemeris.o Expert.o Expression.o GenericDasa.o Hora.o \
	Horoscope.o HtmlWriter.o Jaimini.o KalachakraDasa.o \
	MdlInterpreter.o MdlLexer.o MdlParser.o Nakshatra.o Partner.o Planet.o \
	PrintoutHelper.o SimpleHoroscope.o SingletonLifeline.o \
	TextHelper.o TextWriter.o Transit.o UranianBase.o Uranian.o UranianHelper.o \
	Varga.o VargaHoroscope.o VimsottariDasa.o Writer.o WriterFactory.o YogaConfig.o \
	Yoga.o

all : $(JYOTISH_LIB)

CPPFLAGS = -g -c -I. -I../swe -I../base -I.. -I../.. `wx-config --cppflags`
    
# LDFLAGS = `wx-config --libs` -L. $(JYOTISH_LIB) $(SWE_LIB)
LDLIBS = -lstdc++ $(JYOTISH_LIB) $(BASE_LIB) $(SWE_LIB) `wx-config --libs` 
# LDLIBS = -lstdc++ $(JYOTISH_LIB) $(BASE_LIB) $(SWE_LIB) `wx-config --linkdeps` 

.cc.o :
	$(CPP) $(CPPFLAGS) -o$@ $*.cc

.cpp.o :
	$(CPP) $(CPPFLAGS) -o$@ $*.cpp

$(JYOTISH_PROG) : $(JYOTISH_LIB) textclient.o
	$(CPP) -o $(JYOTISH_PROG) textclient.o $(LDLIBS)
 
$(JYOTISH_LIB) : $(OBS)
	$(AR) $(JYOTISH_LIB) $(OBS)
 
clean:
	$(RM) *.o $(JYOTISH_PROG) $(JYOTISH_LIB) *.core

